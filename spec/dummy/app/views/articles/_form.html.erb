<div class="row">
  <div class="col-sm-10">
    <%= simple_form_for(@article) do |f| %>

      <%= multilang_wrapper(:title) { |attribute, label| f.input attribute, label: label } %>

      <%= f.input :description %>

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
